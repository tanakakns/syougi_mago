block content
  //-  ここからは画像と説明文のテーブル
  table(align="center" cellpadding="0" cellspacing="0" width="700" style="BACKGROUND-COLOR: #ffffff")
    tr
      td(align="left" valign="top" style="padding:20px 20px 50px 20px;")
        img(src="http://www.geocities.jp/syougi_mago/gazou/oc-mono.jpg" width="100" height="65" border="0" align="right" style="margin:-15px 10px 0 0;")
        p(style="line-height:120%; margin:0 0 0 10px; font-size:11pt;" align="left")= '＜詰将棋パラダイス＞'
        p(style="line-height:120%; margin:0 ; font-size:18pt;" align="center")
